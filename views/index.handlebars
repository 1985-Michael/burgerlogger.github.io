<h1>Burger Logger</h1>

<h2>Eat The Burger</h2>

<ul>
  {{#each Burger}}
    {{#unless not-hungry}}
      {{> Burgers/burger-block hungry=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>burger</h2>

<ul>
  {{#each Burger}}
    {{#if not-hungry}}
      {{> burgers/burger-block hungry=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="hungry" value="1" checked> Sleepy!<br>
    <input type="radio" name="hungry" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>
